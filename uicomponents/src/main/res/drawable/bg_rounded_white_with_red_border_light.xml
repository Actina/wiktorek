<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@android:color/transparent" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/loadingScreenBackground_light" />

            <stroke
                android:width="2dp"
                android:color="#22DC0032" />

            <corners
                android:bottomLeftRadius="@dimen/bottom_sheet_corner_radius"
                android:bottomRightRadius="@dimen/bottom_sheet_corner_radius"
                android:topLeftRadius="@dimen/bottom_sheet_corner_radius"
                android:topRightRadius="@dimen/bottom_sheet_corner_radius" />
        </shape>
    </item>
</layer-list>