<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@android:color/transparent" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">

            <corners
                android:bottomLeftRadius="@dimen/history_item_corner_radius"
                android:bottomRightRadius="@dimen/history_item_corner_radius"
                android:topLeftRadius="@dimen/history_item_corner_radius"
                android:topRightRadius="@dimen/history_item_corner_radius" />

            <solid android:color="#ccFFFFFF" />
