<?xml version="1.0" encoding="utf-8"?>
<ripple xmlns:android="http://schemas.android.com/apk/res/android"
    android:color="@color/bloodRedDark">
    <item android:id="@android:id/mask">
        <selector android:state_pressed="true">
            <shape android:shape="rectangle">
                <solid android:color="@color/toolbarBackgroundDarkPrimary" />
            </shape>
        </selector>
        <selector android:state_pressed="false">
            <shape android:shape="rectangle">
                <solid android:color="@color/toolbarBackgroundDarkPrimary" />
            </shape>
        </selector>
    </item>

    <item android:id="@android:id/background">
        <shape android:shape="rectangle">
            <solid android:color="@color/toolbarBackgroundPrimary" />
        </shape>
    </item>
</ripple>