<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    xmlns:nkspo="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:paddingLeft="@dimen/padding_topdown_content"
        android:paddingTop="@dimen/padding_topdown_content"
        android:paddingRight="@dimen/padding_topdown_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/row_onboarding_viewpager_image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="64dp"
            android:src="@drawable/ic_warning_light"
            tools:ignore="ContentDescription"
            tools:src="@drawable/ic_onboarding_common_ride_icon_light" />

        <TextView
            android:id="@+id/row_onboarding_viewpager_title"
            style="@style/TextAppearance.Spoe.HeaderOnboarding"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/padding_topdown_content"
            android:layout_marginBottom="@dimen/xs_spacing"
            android:gravity="center"
            tools:text="@string/driver_warning_header_pl" />

        <TextView
            android:id="@+id/row_onboarding_viewpager_content"
            style="@style/TextAppearance.Spoe.ContentOnboarding"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center|top"
            android:layout_marginTop="@dimen/padding_topdown_content"
            android:gravity="center_horizontal"
            tools:text="@string/driver_warning_content_pl" />

    </LinearLayout>
</ScrollView>